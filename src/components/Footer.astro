---
import { CURRENT_SUBDOMAIN, API_BASE } from '../lib/tenant-config';

const currentYear = new Date().getFullYear();

// 从 API 获取租户配置
async function getSiteConfig() {
  try {
    const res = await fetch(`${API_BASE}/api/v1/public/${CURRENT_SUBDOMAIN}`, {
      headers: { 'Content-Type': 'application/json' }
    });
    if (!res.ok) return null;
    const data = await res.json();
    return data.data;
  } catch (error) {
    console.error('Failed to fetch site config:', error);
    return null;
  }
}

// 从 API 获取荣誉数据用于标签
async function getHonors() {
  try {
    const res = await fetch(`${API_BASE}/api/v1/public/${CURRENT_SUBDOMAIN}/honors`, {
      headers: { 'Content-Type': 'application/json' }
    });
    if (!res.ok) return [];
    const data = await res.json();
    return data.data || [];
  } catch (error) {
    console.error('Failed to fetch honors:', error);
    return [];
  }
}

const siteConfig = await getSiteConfig();
const apiHonors = await getHonors();

// 默认标签（邱小亮）
const defaultTags = [
  { label: '企业AI智能体实施部署专家', color: 'accent' },
  { label: '心脑血管健康数字化管理实践者', color: 'secondary' },
  { label: '系统架构师', color: 'primary' },
  { label: '数据资产管理师', color: 'primary' },
  { label: '海南岛AI健康大使', color: 'secondary' },
];

// 从荣誉生成标签
const tags = apiHonors.length > 0
  ? apiHonors.slice(0, 5).map((h: any, i: number) => ({
      label: h.title.length > 15 ? h.title.substring(0, 15) + '...' : h.title,
      color: i % 3 === 0 ? 'accent' : i % 3 === 1 ? 'secondary' : 'primary'
    }))
  : defaultTags;

// 站点信息
const siteName = siteConfig?.name || '邱小亮';
const siteTagline = siteConfig?.seoConfig?.description?.substring(0, 20) || 'AI × 健康数字化';
const siteDescription = siteConfig?.description || '承接企业AI智能体定制部署、心脑血管健康数字化管理、AI+大健康融合解决方案的定制与落地，欢迎政企/企业/大健康机构洽谈合作。';

// 联系方式
const contactInfo = {
  phone: siteConfig?.contactConfig?.phone || '17326050425',
  email: siteConfig?.contactConfig?.email || 'qxl5918@126.com',
};

const quickLinks = [
  { href: '#about', label: '关于我' },
  { href: '#services', label: '服务' },
  { href: '#blog', label: '博客' },
  { href: '#cases', label: '案例' },
  { href: '#contact', label: '联系' },
];
---

<footer class="bg-surface dark:bg-slate-900 border-t border-border relative overflow-hidden">
  <!-- 背景装饰 -->
  <div class="absolute inset-0 tech-grid opacity-50"></div>
  <div class="absolute bottom-0 left-1/4 w-96 h-96 bg-accent/5 rounded-full blur-3xl"></div>
  <div class="absolute top-0 right-1/4 w-64 h-64 bg-secondary/5 rounded-full blur-3xl"></div>

  <div class="container py-12 relative z-10">
    <!-- 主内容区 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
      <!-- 个人信息 -->
      <div class="lg:col-span-2">
        <div class="flex items-center gap-3 mb-5">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-accent to-purple-600 flex items-center justify-center text-white shadow-lg shadow-accent/30">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <div>
            <span class="text-xl font-bold text-text-primary">{siteName}</span>
            <span class="block text-xs text-text-secondary">{siteTagline}</span>
          </div>
        </div>
        <p class="text-text-secondary text-sm leading-relaxed max-w-md mb-5">
          {siteDescription}
        </p>
        <!-- 核心定位标签 -->
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class={`data-badge ${tag.color === 'primary' ? '!border-primary/30 !text-primary' : tag.color === 'secondary' ? '!border-secondary/30 !text-secondary' : ''}`}>
              {tag.label}
            </span>
          ))}
        </div>
      </div>

      <!-- 快速导航 -->
      <div>
        <h3 class="text-sm font-semibold text-text-primary mb-4 flex items-center gap-2">
          <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          快速导航
        </h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-text-secondary hover:text-accent transition-colors text-sm flex items-center gap-2 group"
              >
                <svg class="w-3 h-3 text-border group-hover:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- 联系方式 -->
      <div>
        <h3 class="text-sm font-semibold text-text-primary mb-4 flex items-center gap-2">
          <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          联系方式
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={`tel:${contactInfo.phone}`}
              class="flex items-center gap-3 text-text-secondary hover:text-primary transition-colors group"
            >
              <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <span class="text-sm">{contactInfo.phone}</span>
            </a>
          </li>
          <li>
            <a
              href={`mailto:${contactInfo.email}`}
              class="flex items-center gap-3 text-text-secondary hover:text-accent transition-colors group"
            >
              <div class="w-8 h-8 rounded-lg bg-accent/10 flex items-center justify-center group-hover:bg-accent/20 transition-colors">
                <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-sm">{contactInfo.email}</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- 分隔线 -->
    <div class="border-t border-border pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-center md:text-left">
        <p class="text-text-secondary text-xs">
          ©{currentYear} {siteName} · {siteTagline}
        </p>
        <div class="flex items-center gap-4">
          <p class="text-text-secondary/60 text-xs flex items-center gap-1">
            <svg class="w-4 h-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            {siteTagline}
          </p>
          <!-- 登录管理后台按钮 -->
          <a
            href="http://101.42.36.114:5919/login"
            class="inline-flex items-center gap-2 px-4 py-2 text-xs font-medium text-white bg-gradient-to-r from-accent to-purple-600 rounded-lg hover:from-accent/90 hover:to-purple-600/90 transition-all shadow-lg shadow-accent/20 hover:shadow-accent/40"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            登录管理后台
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
