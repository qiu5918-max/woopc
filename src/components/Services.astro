---
// API 配置
const API_BASE = import.meta.env.API_BASE || 'http://101.42.36.114:5919';
const SUBDOMAIN = 'www';

// 从 API 获取服务数据
async function getServices() {
  try {
    const res = await fetch(`${API_BASE}/api/v1/public/${SUBDOMAIN}/services`, {
      headers: { 'Content-Type': 'application/json' }
    });
    if (!res.ok) return [];
    const data = await res.json();
    return data.data || [];
  } catch (error) {
    console.error('Failed to fetch services:', error);
    return [];
  }
}

// 默认图标映射
const defaultIcons: Record<string, string> = {
  'ai-deployment': `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
  </svg>`,
  'health-management': `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
  </svg>`,
  'ai-health-fusion': `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
  </svg>`
};

const apiServices = await getServices();

// 如果 API 有数据则使用，否则使用默认数据
const services = apiServices.length > 0 ? apiServices.map((s: any, index: number) => ({
  id: s.slug || s.id,
  title: s.title,
  subtitle: s.subtitle || '',
  target: s.target || '',
  value: s.value || '',
  highlights: s.highlights || [],
  icon: defaultIcons[s.slug] || defaultIcons['ai-deployment'],
  color: s.color || 'accent'
})) : [
  {
    id: 'ai-deployment',
    title: '企业AI智能体',
    subtitle: '定制化实施部署',
    target: '中小企业 / 政企单位 / 大健康机构',
    value: '从需求到落地，全流程定制企业专属AI智能体',
    highlights: ['需求调研', '方案定制', '落地实施', '团队培训'],
    icon: defaultIcons['ai-deployment'],
    color: 'accent'
  },
  {
    id: 'health-management',
    title: '心脑血管健康',
    subtitle: '数字化管理方案',
    target: '慢病人群 / 上班族 / 关注健康的个人',
    value: '用数据化思维定制专属健康方案，让管理可落地、可坚持',
    highlights: ['健康调研', '数据分析', '方案定制', '30天跟进'],
    icon: defaultIcons['health-management'],
    color: 'secondary'
  },
  {
    id: 'ai-health-fusion',
    title: 'AI+健康融合',
    subtitle: '一体化解决方案',
    target: '大健康机构 / 企业健康服务 / 社区服务中心',
    value: '将AI智能体与健康管理结合，打造智能化健康管理体系',
    highlights: ['痛点调研', '融合方案', '系统对接', '长期优化'],
    icon: defaultIcons['ai-health-fusion'],
    color: 'primary'
  }
];
---

<section id="services" class="section relative overflow-hidden">
  <!-- 背景装饰 -->
  <div class="absolute inset-0 tech-grid"></div>

  <div class="container relative z-10">
    <!-- 标题 -->
    <div class="text-center mb-16">
      <span class="data-badge mb-4 inline-flex">核心服务</span>
      <h2 class="section-title mb-3">我的服务</h2>
      <p class="section-subtitle">定制化方案，让AI落地，让健康有数</p>
    </div>

    <!-- 服务卡片 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div class="card group relative overflow-hidden">
          <!-- 顶部渐变条 -->
          <div class={`absolute top-0 left-0 right-0 h-1 ${
            service.color === 'primary' ? 'bg-gradient-to-r from-primary to-yellow-400' :
            service.color === 'secondary' ? 'bg-gradient-to-r from-secondary to-emerald-400' :
            'bg-gradient-to-r from-accent to-purple-500'
          }`}></div>

          <!-- 图标和序号 -->
          <div class="flex items-start justify-between mb-6">
            <div class={`icon-box ${service.color === 'primary' ? 'icon-box-primary' : service.color === 'secondary' ? 'icon-box-secondary' : ''}`}>
              <Fragment set:html={service.icon} />
            </div>
            <span class="text-5xl font-bold text-border/30 group-hover:text-accent/20 transition-colors">
              0{index + 1}
            </span>
          </div>

          <!-- 服务标题 -->
          <h3 class="text-xl font-bold text-text-primary mb-1 group-hover:text-accent transition-colors">
            {service.title}
          </h3>
          <p class="text-sm text-accent font-medium mb-3">{service.subtitle}</p>

          <!-- 核心价值 -->
          <p class="text-sm text-text-secondary mb-6 leading-relaxed">
            {service.value}
          </p>

          <!-- 服务亮点 -->
          <div class="mb-6">
            <div class="grid grid-cols-2 gap-2">
              {service.highlights.map((highlight) => (
                <div class="flex items-center gap-2">
                  <div class={`w-1.5 h-1.5 rounded-full ${
                    service.color === 'primary' ? 'bg-primary' :
                    service.color === 'secondary' ? 'bg-secondary' :
                    'bg-accent'
                  }`}></div>
                  <span class="text-xs text-text-secondary">{highlight}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- 服务对象 -->
          <div class="flex items-center gap-2 text-xs text-text-secondary mb-6 pt-4 border-t border-border/50">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span>{service.target}</span>
          </div>

          <!-- 转化按钮 -->
          <a
            href="#contact"
            class={`btn w-full text-sm font-semibold ${
              service.color === 'primary' ? 'btn-primary' :
              service.color === 'secondary' ? 'btn-secondary' :
              'btn-accent'
            }`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            咨询定制
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
