---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { CURRENT_SUBDOMAIN, API_BASE, getTenantConfig, getBrandColors } from '../lib/tenant-config';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

// 获取租户配置
const tenantConfig = await getTenantConfig(CURRENT_SUBDOMAIN);
const brandColors = getBrandColors(tenantConfig?.brandConfig);

const {
  title,
  description = tenantConfig?.seoConfig?.description || '邱小亮，企业AI智能体实施部署专家 | 心脑血管健康数字化管理实践者，系统架构师、数据资产管理师、海南岛AI健康大使，17年AI+大健康+数字化转型实战经验',
  keywords = '邱小亮,企业AI智能体实施部署,心脑血管健康数字化管理,AI落地,健康管理,系统架构师,数据资产管理师,海南岛AI健康大使,数字文旅专家,创业导师'
} = Astro.props;

const siteName = tenantConfig?.name || '邱小亮';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="邱小亮" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="zh_CN" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Brand Colors CSS Variables -->
    <style is:inline set:html={`
      :root {
        --color-primary: ${brandColors.primary};
        --color-secondary: ${brandColors.secondary};
        --color-accent: ${brandColors.primary};
      }
    `} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": siteName,
      "jobTitle": tenantConfig?.description || "企业AI智能体实施部署专家 | 心脑血管健康数字化管理实践者",
      "description": description,
      "url": Astro.site,
      "telephone": tenantConfig?.contactConfig?.phone || "",
      "email": tenantConfig?.contactConfig?.email || "",
      "award": [],
      "sameAs": []
    })} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
